<% layout("/layouts/boilerplate") %>
<body>
    <h3 class="mt-3 mb-3"> All AdminData</h3>
    
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
    <%   for(let listing of allListings){ %> 
      <a  class="listing-link" href="/listings/<%= listing._id %>">
    <div class="card col" >
      <img style="height: 20rem;" src="<%= listing.image %>" class="card-img-top" alt="Listing_image">
      <div class="card-img-overlay">SecurityBoat</div>
      <div class="card-body">
        <p class="card-text">
          <b><%= listing.title %></b><br>
          <b>&#8377;</b><%= listing.price.toLocaleString('en-IN') %>
        </p>
      </div>
    </div>
  </a>
    <% } %>  
  </div>

</body>
