<% layout("/layouts/boilerplate") %>
<body>
    
    <div class="row mt-3">
      <div class="col-8 offset-3  ">
        <h3 class="mt-3"> AdminData  Details</h3>
      </div>

      <div class="col-6 offset-3 mt-3 mb-3">
        <div class="card">
          <img src="<%= listing.image %>" class="card-img-top show-img" alt="listing_image">
          <div class="card-body mt-3">
            <p class="card-text">
              <h1><%= listing.title %></h1><br>
              <%= listing.description %><br>
               <b>&#8377;</b><%= listing.price.toLocaleString('en-IN') %><br>
               <%= listing.location %><br>
               <%= listing.country %><br>

            </p>
          </div>
        </div>
        <div class="btns">
          <a class="btn btn-dark col-2 offset-3" href="/listings/<%= listing._id %>/edit">Edit</a>
          <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST">
              <button class="btn btn-dark offset-2 edit-btn" >Delete</button>
          </form>
        </div>
      </div>

      
    
    
    
  
</body>
